<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/item_background"
              android:padding="@dimen/general_10">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_shift_input_title" android:layout_weight="1"
            android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@android:color/black" android:layout_marginTop="@dimen/top_5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_shift_input_item" android:layout_weight="2"
            android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@color/text_hint_gray" android:gravity="right" android:layout_marginTop="@dimen/top_5"
            android:layout_marginLeft="@dimen/left_10" android:layout_marginRight="@dimen/right_10"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_shift_input_show"
            android:background="@drawable/ic_expand"
            android:textSize="@dimen/font_tv_hint_15"/>
</LinearLayout>