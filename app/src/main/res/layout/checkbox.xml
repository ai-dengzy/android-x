    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="@color/title_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_title_back_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_xml"
            android:textSize="@dimen/font_tv_normal_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_title_title1_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_tv_normal_20"
            app:layout_constraintLeft_toRightOf="@+id/tv_title_back_checkbox"
            app:layout_constraintTop_toTopOf="@+id/tv_title_back_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title_back_checkbox"
            app:layout_constraintRight_toLeftOf="@+id/tv_select_add_checkbox"
            />

        <TextView
            android:id="@+id/tv_select_add_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_black"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/tv_title_title1_checkbox"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title_title1_checkbox"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_43"
        android:textSize="@dimen/font_tv_hint_15"
        android:text="搜索"
        android:id="@+id/btn_search"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_back_checkbox"/>

