<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_job_overview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_job_overview_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_4"
        android:background="@drawable/ic_back_xml"
        android:textSize="@dimen/font_tv_normal_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_job_overview_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_30"
        android:gravity="center"
        android:text="职位概述"
        android:textColor="@color/black"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintTop_toTopOf="@+id/view_job_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view_job_overview"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view_job"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/general_118"
        android:layout_marginTop="@dimen/top_8"
        app:layout_constraintTop_toBottomOf="@+id/tv_job_overview_title"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_24"
        android:layout_marginTop="@dimen/top_15"
        android:text="普工"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_18"
        app:layout_constraintStart_toStartOf="@+id/view_job"
        app:layout_constraintTop_toTopOf="@+id/view_job" />

    <TextView
        android:id="@+id/tv_clock"
        android:layout_width="@dimen/general_24"
        android:layout_height="@dimen/general_24"
        android:background="@drawable/clock"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="@+id/tv_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_type" />

    <TextView
        android:id="@+id/tv_release_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_10"
        android:text="2019-09-09"
        android:textColor="@color/text_hint_gray"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintBottom_toBottomOf="@+id/tv_clock"
        app:layout_constraintStart_toEndOf="@+id/tv_clock"
        app:layout_constraintTop_toTopOf="@+id/tv_clock" />
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_15"
        android:text="薪资面议"
        android:textColor="#2a82e4"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toBottomOf="@+id/view_job"
        app:layout_constraintStart_toStartOf="@+id/tv_type" />

    <TextView
        android:id="@+id/tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_12"
        android:padding="@dimen/general_10"
        android:layout_marginEnd="@dimen/right_8"
        android:text="需求个人"
        android:background="@drawable/btn_style4"
        android:textColor="#2a82e4"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintEnd_toEndOf="@+id/view_job"
        app:layout_constraintTop_toTopOf="@+id/view_job" />
    <Button
        android:id="@+id/btn_more"
        android:layout_width="@dimen/general_46"
        android:layout_height="@dimen/general_30"
        android:layout_marginEnd="@dimen/right_15"
        android:layout_marginBottom="@dimen/bottom_20"
        android:background="@drawable/btn_style4"
        android:text="详情"
        android:textColor="#2a82e4"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintBottom_toBottomOf="@+id/view_job"
        app:layout_constraintEnd_toEndOf="@+id/view_job" />

    <View
        android:id="@+id/view10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_30"
        android:layout_marginTop="@dimen/top_8"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/view_job" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_24"
        android:text="已报名"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_18"
        app:layout_constraintBottom_toBottomOf="@+id/view10"
        app:layout_constraintStart_toStartOf="@+id/view10"
        app:layout_constraintTop_toTopOf="@+id/view10" />

    <TextView
        android:id="@+id/tv_apply_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="（33）"
        android:textColor="@color/text_hint_gray"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_registration_list_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view10" />
</androidx.constraintlayout.widget.ConstraintLayout>