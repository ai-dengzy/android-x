<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_chat_avatar"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/user_avatar_xml"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="10dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_chat_user_name"
              app:layout_constraintTop_toTopOf="@+id/tv_chat_avatar"
              app:layout_constraintStart_toEndOf="@+id/tv_chat_avatar"
              android:layout_marginStart="10dp"
              android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_chat_user_message"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/tv_chat_user_name"
              app:layout_constraintStart_toStartOf="@+id/tv_chat_user_name"
              android:textSize="16sp"/>
    <View android:layout_width="0dp" android:layout_height="1dp"
          app:layout_constraintStart_toStartOf="@+id/tv_chat_user_message"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@id/tv_chat_user_message"
          app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"
          android:background="#3C9C9A9A" android:layout_marginTop="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_chat_send_time"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintTop_toTopOf="@+id/tv_chat_user_name" android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>