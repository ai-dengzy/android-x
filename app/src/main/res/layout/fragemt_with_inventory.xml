<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/title_background"
                  android:id="@+id/linearLayout"
                  tools:ignore="MissingConstraints">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_back"
                android:background="@drawable/ic_back_xml"
                android:textSize="@dimen/font_tv_normal_18"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="清册"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="5dp"
                tools:layout_editor_absoluteX="1dp"
                android:id="@+id/tv_title_title1"
                android:textSize="@dimen/font_tv_normal_20"
                android:textColor="@android:color/black"
                android:layout_weight="1" android:gravity="center"/>
        <Button
                android:id="@+id/button_add"
                android:textSize="@dimen/font_tv_hint_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"/>
    </LinearLayout>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_tip1"
              android:textSize="@dimen/font_tv_normal_18"
              android:gravity="center"
              android:text="工   种"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/linearLayout"
              android:layout_marginStart="@dimen/general_30"
              app:layout_constraintStart_toStartOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_tip2"
              android:textSize="@dimen/font_tv_normal_18"
              android:text="姓   名"
              android:gravity="center"
              app:layout_constraintTop_toBottomOf="@+id/linearLayout"
              android:layout_marginStart="@dimen/general_248"
              android:layout_marginTop="8dp"
              app:layout_constraintStart_toStartOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_inventory_fragment_content"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip1">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>