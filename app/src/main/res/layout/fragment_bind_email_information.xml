<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_bind_email_information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="#248bfe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_forget_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_back_xml"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/top_4"
        app:layout_constraintBottom_toBottomOf="@+id/view_bind_email_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_bind_email_information" />

    <TextView
        android:id="@+id/tv_bind_email_information_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_30"
        android:gravity="center"
        android:text="邮箱绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toBottomOf="@+id/view_bind_email_information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_6"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@+id/view_bind_email_information"
        />
    <TextView
        android:id="@+id/tv_bind_email_information_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="填写邮箱，并通过验证"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginTop="@dimen/general_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_bind_email_information"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/general_90"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_bind_email_information"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />
    <EditText
        android:id="@+id/et_bind_email_information_number"
        android:layout_width="@dimen/general_240"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱"
        android:background="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toEndOf="@+id/tv_bind_email_information"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginRight="@dimen/general_15"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        />
    <TextView
        android:id="@+id/tv_email_code"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <EditText
        android:id="@+id/et_email_code"
        android:layout_width="@dimen/general_140"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:background="@color/white"
        android:inputType="number"
        android:textSize="@dimen/font_tv_normal_16"
        android:maxLength="6"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toEndOf="@+id/tv_email_code"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <TextView
        android:id="@+id/tv_email_code_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style1"
        android:text="获取验证码"
        android:gravity="center"
        android:textSize="@dimen/font_tv_hint_14"
        android:paddingBottom="@dimen/general_4"
        android:paddingTop="@dimen/general_4"
        android:paddingLeft="@dimen/general_6"
        android:paddingRight="@dimen/general_6"
        android:layout_marginRight="@dimen/general_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintTop_toBottomOf="@id/line2"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_forget_password_three_new"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_hint_15"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        app:layout_constraintBottom_toTopOf="@id/line22"
        />


    <View
        android:visibility="gone"
        android:id="@+id/line22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginRight="@dimen/general_15"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_forget_password_three_check"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_hint_15"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line22"
        app:layout_constraintBottom_toTopOf="@id/line23"
        />
    <EditText
        android:visibility="gone"
        android:id="@+id/et_forget_password_three_again"
        android:layout_width="@dimen/general_250"
        android:layout_height="wrap_content"
        android:hint="8-30位，包含字母和数字"
        android:inputType="textPassword"
        android:background="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toEndOf="@+id/tv_forget_password_three_check"
        app:layout_constraintTop_toBottomOf="@id/line22"
        app:layout_constraintBottom_toTopOf="@id/line23"
        />
    <View
        android:visibility="gone"
        android:id="@+id/line23"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintTop_toBottomOf="@id/line22"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_forget_password_three_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="为保证您的账户和资金安全，请不要设置与其他软件（如社交软件）、网站（如社交平台、论坛）相同或相似的用户名和密码组合。"
        android:textColor="@color/text_hint_gray"
        android:textSize="@dimen/font_tv_hint_13"
        android:layout_marginRight="@dimen/general_10"
        android:layout_marginLeft="@dimen/general_10"
        android:layout_marginTop="@dimen/general_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line23"
        />

    <TextView
        android:id="@+id/tv_bind_email_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_35"
        android:background="#248bfe"
        android:gravity="center"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_17"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginRight="@dimen/general_15"
        android:layout_marginTop="@dimen/general_46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forget_password_three_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>