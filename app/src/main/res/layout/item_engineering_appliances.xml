<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/engineering_appliances_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铲子"
        android:textStyle="bold"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/engineering_appliances_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="规格型号:"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_name"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/engineering_appliances_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_type_title"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_type_title"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_name"
        app:layout_constraintLeft_toRightOf="@+id/engineering_appliances_type_title"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/engineering_appliances_unit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单位:"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_type_title"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_type_title"
        app:layout_constraintEnd_toStartOf="@+id/engineering_appliances_unit"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/engineering_appliances_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m3"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_type_title"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_type_title"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/engineering_appliances_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量:"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_type"
        />
    <TextView
        android:id="@+id/engineering_appliances_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_number_title"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_number_title"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_type"
        app:layout_constraintLeft_toRightOf="@+id/engineering_appliances_number_title"
        />
    <TextView
        android:id="@+id/engineering_appliances_use_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本次用量:"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_number_title"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_number_title"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_type"
        app:layout_constraintEnd_toStartOf="@+id/et_use_number"
        />

    <EditText
        android:id="@+id/et_use_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/engineering_appliances_number_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/engineering_appliances_unit_title"
        app:layout_constraintTop_toBottomOf="@+id/engineering_appliances_unit"
        app:layout_constraintTop_toTopOf="@+id/engineering_appliances_number_title"

        />
</androidx.constraintlayout.widget.ConstraintLayout>