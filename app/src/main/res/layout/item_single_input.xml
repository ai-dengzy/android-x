<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="@dimen/general_10"
              android:background="@drawable/item_background">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_input_title"
            android:textSize="@dimen/font_tv_hint_15" android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_input_content" android:gravity="right"
            android:background="@color/transparent" android:textSize="@dimen/font_tv_hint_15"/>
</LinearLayout>