<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="@dimen/general_10">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_tv_hint_14"
        android:textStyle="bold"
        android:text="Gavin"
        android:id="@+id/tv_shipping_address_people"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_tv_hint_12"
        android:text="13574141625"
        android:id="@+id/tv_shipping_address_phone"
        app:layout_constraintTop_toTopOf="@id/tv_shipping_address_people"
        app:layout_constraintBottom_toBottomOf="@id/tv_shipping_address_people"
        app:layout_constraintLeft_toRightOf="@id/tv_shipping_address_people"
        android:layout_marginLeft="@dimen/left_8"
        />

    <TextView
        android:id="@+id/tv_shipping_address"
        android:layout_width="@dimen/general_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_6"
        android:layout_marginEnd="8dp"
        android:text="湖南省娄底市娄星区大科街道湖南人文科技学院dx"
        android:textColor="@color/black"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintEnd_toStartOf="@+id/view8"
        app:layout_constraintStart_toStartOf="@+id/tv_shipping_address_people"
        app:layout_constraintTop_toBottomOf="@id/tv_shipping_address_people" />

    <View
        android:id="@+id/view8"
        android:layout_width="@dimen/general_1"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/right_10"
        android:background="#999999"
        app:layout_constraintBottom_toBottomOf="@id/tv_shipping_address"
        app:layout_constraintRight_toLeftOf="@id/tv_shipping_address_edit"
        app:layout_constraintTop_toTopOf="@id/tv_shipping_address_people" />

    <TextView
        android:id="@+id/tv_shipping_address_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="编辑"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_shipping_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_shipping_address_people" />
</androidx.constraintlayout.widget.ConstraintLayout>