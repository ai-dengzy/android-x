<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="#FFFFFF">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_friend_way_avatar"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/user_avatar_xml"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="10dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_friend_way_user_name"
              app:layout_constraintTop_toTopOf="@+id/tv_friend_way_avatar"
              app:layout_constraintStart_toEndOf="@+id/tv_friend_way_avatar"
              android:layout_marginStart="10dp"
              android:textSize="16sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_friend_way_user_message"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/tv_friend_way_user_name"
              app:layout_constraintStart_toStartOf="@+id/tv_friend_way_user_name"
              android:textSize="16sp"/>

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:background="#3C9C9A9A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_friend_way_user_message"
        app:layout_constraintTop_toBottomOf="@id/tv_friend_way_user_message" />

    <TextView
        android:id="@+id/tv_friend_way_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/enter"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_friend_way_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_friend_way_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>