<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:id="@+id/ll_select"
    android:background="@drawable/item_background">

    <TextView
            android:layout_width="@dimen/general_60"
            android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_select_title"
        android:layout_weight="1"
        android:text="资质类别级等级"
            android:layout_marginTop="@dimen/top_10"
            android:layout_marginStart="@dimen/left_5"
            android:layout_marginBottom="@dimen/bottom_10"
           android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="@dimen/general_200"
            android:background="@color/transparent"
            android:maxLines="1"
            android:singleLine="true"
            android:cursorVisible="false"
            android:layout_height="wrap_content"
            android:id="@+id/et_dialog_select_item"
            android:layout_margin="@dimen/general_10"
            android:textSize="@dimen/font_tv_hint_15"
            android:hint="请选择"
            android:textColor="@color/black"
        android:gravity="right"/>
    <TextView
            android:layout_width="@dimen/general_10"
            android:layout_height="@dimen/general_15"
        android:id="@+id/tv_dialog_select_show"
            android:background="@drawable/jump"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/right_10"
            android:textSize="@dimen/font_tv_hint_15"/>
</LinearLayout>