<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_background">
    <CheckBox
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_10"
        android:id="@+id/checkbox"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chekbox_select_title"
        android:layout_margin="@dimen/general_10"
        android:textSize="@dimen/font_tv_hint_15"
        android:textColor="@android:color/black"/>
    <TextView
        android:visibility="gone"
        android:text="xxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chekbox_detail"
        android:layout_margin="@dimen/general_10"
        android:textSize="@dimen/font_tv_hint_12"
        android:textColor="@android:color/darker_gray"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_look_up"
        android:background="@drawable/ic_expand"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/font_tv_hint_15"/>
    <ImageView
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/tv_look_up_more"
        android:background="@drawable/more"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/font_tv_hint_15"/>
</LinearLayout>