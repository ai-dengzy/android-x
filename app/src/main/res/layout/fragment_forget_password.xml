<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view_forget_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="#218bfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_forget_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_back_xml"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/top_4"
        app:layout_constraintBottom_toBottomOf="@+id/view_forget_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_forget_password" />

    <TextView
        android:id="@+id/tv_forget_password_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_30"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toBottomOf="@+id/view_forget_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_forget_password_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:text="手机号找回"
        android:layout_marginStart="@dimen/left_40"
        android:layout_marginEnd="@dimen/right_40"
        android:background="@drawable/btn_style3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/top_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_forget_password" />

    <Button
        android:id="@+id/btn_forget_password_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:text="邮箱号找回"
        android:background="@drawable/btn_style3"
        android:layout_marginTop="@dimen/top_100"
        app:layout_constraintEnd_toEndOf="@+id/btn_forget_password_phone"
        app:layout_constraintStart_toStartOf="@+id/btn_forget_password_phone"
        app:layout_constraintTop_toBottomOf="@+id/btn_forget_password_phone" />
</androidx.constraintlayout.widget.ConstraintLayout>