<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/view_forget_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="#218bfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_forget_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_4"
        android:background="@drawable/ic_back_xml"
        android:textSize="@dimen/font_tv_normal_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_forget_password_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_30"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_forget_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_6"
        android:background="#e5e5e5"
        app:layout_constraintTop_toBottomOf="@+id/view_forget_password"
        />
    <TextView
        android:id="@+id/tv_forget_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="填写手机号，并通过短信验证"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginTop="@dimen/general_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_forget_password"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/general_90"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_forget_password_phone"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />
    <EditText
        android:id="@+id/et_forget_password_number"
        android:layout_width="@dimen/general_240"
        android:layout_height="wrap_content"
        android:hint="请输入11位注册手机号"
        android:background="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toEndOf="@+id/tv_forget_password_phone"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line2"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginRight="@dimen/general_15"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        />
    <TextView
        android:id="@+id/tv_forget_password_check"
        android:layout_width="@dimen/general_80"
        android:layout_height="wrap_content"
        android:text="短信验证码"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <EditText
        android:id="@+id/et_forget_password"
        android:layout_width="@dimen/general_140"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:background="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        android:layout_marginLeft="@dimen/general_15"
        app:layout_constraintStart_toEndOf="@+id/tv_forget_password_check"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <TextView
        android:id="@+id/tv_forget_password_get_check"
        android:layout_width="@dimen/general_88"
        android:layout_height="@dimen/general_26"
        android:background="@drawable/btn_style1"
        android:text="获取验证码"
        android:gravity="center"
        android:textSize="@dimen/font_tv_hint_14"
        android:layout_marginRight="@dimen/general_15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintBottom_toTopOf="@id/line3"
        />
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_1"
        android:background="#e5e5e5"
        android:layout_marginTop="@dimen/general_43"
        app:layout_constraintTop_toBottomOf="@id/line2"
        />
    <TextView
        android:id="@+id/tv_forget_password_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_35"
        android:background="#218bfc"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_17"
        android:layout_marginLeft="@dimen/general_15"
        android:layout_marginRight="@dimen/general_15"
        android:layout_marginTop="@dimen/general_46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>