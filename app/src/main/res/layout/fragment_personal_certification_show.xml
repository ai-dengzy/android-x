<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_personal_certification"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/font_tv_normal_20"
        android:text="暂无认证数据"
        android:gravity="center"
        android:textColor="@color/black"
        />
    <View
        android:id="@+id/view_personal_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_37"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_personal_certification_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/top_4"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_back_xml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_personal_certification"
        app:layout_constraintTop_toTopOf="@+id/view_personal_certification" />
    <TextView
        android:id="@+id/tv_personal_certification_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/general_30"
        android:gravity="center"
        android:text="个人认证"
        android:textColor="@color/white"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toBottomOf="@+id/view_personal_certification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_personal_certification"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_personal_certification_add"
        android:layout_width="@dimen/general_40"
        android:layout_height="@dimen/general_20"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:background="@drawable/add"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/view_personal_certification"
        app:layout_constraintEnd_toEndOf="@+id/view_personal_certification"
        app:layout_constraintBottom_toBottomOf="@+id/view_personal_certification"
        />
    <ScrollView
        android:id="@+id/sv"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view_personal_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/personal_certification_show" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>