<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/item_background"
              android:padding="@dimen/general_10">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_two_pair_input_title"
            android:textSize="@dimen/font_tv_hint_15" android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_two_pair_input_item1"
            android:layout_marginLeft="@dimen/left_10" android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="3"
            android:gravity="center"
            android:id="@+id/et_two_pair_input_value1" android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_two_pair_input_item2"
            android:textSize="@dimen/font_tv_hint_15" android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ems="3"
            android:inputType="number"
            android:id="@+id/et_two_pair_input_value2" android:textSize="@dimen/font_tv_hint_15"
            android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_two_pair_input_item3"
            android:textSize="@dimen/font_tv_hint_15" android:textColor="@android:color/black"/>
</LinearLayout>