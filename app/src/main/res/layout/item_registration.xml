<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/left_2"
    android:layout_marginRight="@dimen/right_2"
    android:layout_marginBottom="@dimen/bottom_2"
    android:elevation="@dimen/general_2"
    android:background="@drawable/view_style2"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_80"
        android:background="@drawable/item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:background="#2a82e4"
        android:text="我的发布"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/left_10"
        android:textSize="@dimen/font_tv_normal_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <TextView
        android:id="@+id/tv_information1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/left_40"
        android:text="需求类别：普工"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toTopOf="@id/tv_information2"
        app:layout_constraintStart_toStartOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <TextView
        android:id="@+id/tv_information2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_40"
        android:layout_marginBottom="@dimen/bottom_16"
        android:text="需求专业：普工  "
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_normal_16"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintStart_toStartOf="@+id/view9" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="@dimen/general_92"
        android:layout_height="@dimen/general_32"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_style4"
        android:gravity="center"
        android:text="需求个人"
        android:textColor="#2a82e4"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintEnd_toEndOf="@+id/view9"
        app:layout_constraintTop_toTopOf="@+id/view9" />

    <View
        android:background="@drawable/view_style2"
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general_50"
        app:layout_constraintTop_toBottomOf="@+id/view9"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/btn_style4"
        android:text="删除"
        android:textColor="#2a82e4"
        android:textSize="@dimen/font_tv_hint_14"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintStart_toStartOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_registration_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style1"
        android:textColor="#505050"
        android:textSize="@dimen/font_tv_hint_14"
        android:text="报名详情"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintStart_toStartOf="@id/view7"
        app:layout_constraintEnd_toEndOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7" />
    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style1"
        android:textColor="#505050"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/font_tv_hint_14"
        android:text="分享"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7" />
</androidx.constraintlayout.widget.ConstraintLayout>