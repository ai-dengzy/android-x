<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#248bfe"/>
            <gradient android:startColor="#248bfe" android:endColor="#ffffff" android:angle="90" android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="#248bfe"/>
            <gradient android:startColor="#248bfe" android:endColor="#248bfe" android:angle="90" android:type="linear"/>
        </shape>
    </item>
</selector>