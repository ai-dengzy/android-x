<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#A1A1A1"/>
            <corners android:bottomLeftRadius="@dimen/general_10" android:bottomRightRadius="@dimen/general_10"
                android:topLeftRadius="@dimen/general_10" android:topRightRadius="@dimen/general_10"/>
            <gradient android:startColor="#A1A1A1" android:endColor="#ffffff" android:type="linear"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="@dimen/general_10" android:bottomRightRadius="@dimen/general_10"
                android:topLeftRadius="@dimen/general_10" android:topRightRadius="@dimen/general_10"/>
            <stroke android:color="@color/colorPrimaryDark" android:width="@dimen/general_1"/>
            <gradient android:startColor="@color/ghost_white" android:endColor="#ffffff" android:type="linear"/>
        </shape>
    </item>
</selector>